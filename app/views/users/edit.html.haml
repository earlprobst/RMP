%h1.heading
  = "Edit my account"

= semantic_form_for(@user) do |form|
  = form.error_messages
  = render 'form', :form => form, :action => 'edit'
  = form.buttons do
    = form.commit_button 'Update user'

%p.actions
  - if current_user == @user
    = link_to 'Cancel', account_path
  - else
    = link_to 'Cancel', users_path
