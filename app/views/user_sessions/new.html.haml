= semantic_form_for @user_session, :url => user_session_path do |form|
  = form.error_messages
  %h1.title Login
  = form.inputs do
    = form.input :email
    = form.input :password, :label => "Pass"
    = form.submit "Login"

= link_to "Forgot Password", new_password_reset_path
