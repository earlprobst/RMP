%h1.heading
  = 'Add new medical device to gateway'

= semantic_form_for([resource.gateway, resource]) do |form|
  = form.error_messages

  = render 'form', :form => form
  = form.buttons do
    = form.commit_button 'Add medical device'

%p.actions
  = link_to 'Cancel', gateway_path(resource.gateway)
